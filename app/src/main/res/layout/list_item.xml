<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.android.tabsample.MainActivity">

    <!-- Layout for a single list item -->
    <ImageView
        android:id="@+id/location_ImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:src="@drawable/solo" />

    <TextView
        android:id="@+id/locationName_TextView"
        style="@style/ViewsFormat"
        android:textColor="@android:color/black"
        tools:text="@string/locationPreview" />

    <TextView
        android:id="@+id/caption_TextView"
        style="@style/ViewsFormat"
        android:layout_marginBottom="16dp"
        tools:text="@string/captionPreview" />

</LinearLayout>